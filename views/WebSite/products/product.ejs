<%- include("../partial/header.ejs") %>
    <main>
        <!-- product start -->
        <section class="py-5">
            <div class="container-fluid">
                <div.<div class="row ${1| ,row-cols-2,row-cols-3, auto,justify-content-md-center,|}">
                    <!-- product details -->
                    <div class="col-12 col-md-6 order-md-last order-2">
                        <div class="row ">
                            <div class="col  ">
                                <h1 class="text-center" style="color: yellowgreen; font-family: cursive; ">
                                    <%= data.Title %>
                                </h1>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 ">
                                <label for="">
                                    <%= data.Description %>
                                </label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 col-md-6 text-center">
                                <label for="">
                                    <b>
                                        <h3> &#x20B9; <%= data.SalePrice %>/-
                                        </h3>
                                    </b>
                                </label>
                                <br>
                                <label for="">
                                    <div><span class="stars-container stars-100"
                                            style="font-size: xx-large;">★★★★★</span></div>
                                </label><br>
                            </div>
                            <div class="col-12 col-md-6 text-center">
                                <label for="">
                                    <b>
                                        <h5>Item in Pack : <%= data.ItemInPack %>
                                        </h5>
                                    </b>
                                </label>
                                <br>
                                <label for=""><b>Color <%= data.Color %></b><br>
                                    <span class="dot" style="border: 5px solid rgb(0, 0, 0);
                                     height: 25px; width: 25px;
                                    background-color : <%= data.Color %>;
                                    border-radius: 50%;
                                    display: inline-block;"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 ">
                                <div class="counter">
                                    <b>Qty:</b> <span class="down" onClick='decreaseCount(event, this)'>-</span>
                                    <input type="text" value="1">
                                    <span class="up" onClick='increaseCount(event, this)'>+</span>
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 col-md-6 text-center ">
                                <button type="button" class="btn btn-outline-dark">Add To Cart</button>
                            </div>
                            <div class="col-12 col-md-6 text-center ">
                                <button type="button" class="btn btn-outline-dark">Buy Know</button>
                            </div>
                        </div>
                        <br><br>
                        <div class="row ">
                            <div class="col-12 ">
                                How To Use It:-
                                <label for="" style="font-size: small;">
                                    <%= data.HowToUse %>
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- product Image -->
                    <div class="col-12 col-md-6 order-md-first order-1">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% for(var i=0; i < data.Images.length; i++) { %>
                                    <div class="carousel-item active">
                                        <img src="/uploadproductimage/<%= data.Images[i] %>" class="d-block w-100" alt="...">
                                    </div>
                                    <% } %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
