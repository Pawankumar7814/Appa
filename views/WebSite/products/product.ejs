<%- include("../partial/header.ejs") %>
    <main>
        <!-- product start -->
        <section class="py-5">
            <div class="container-fluid">
                <div class="row ${1| ,row-cols-2,row-cols-3, auto,justify-content-md-center,|}">
                    <!-- product details -->
                    <div class="col-12 col-md-6 order-md-last order-2">
                        <div class="row ">
                            <div class="col  ">
                                <h1 class="text-center" style="color: yellowgreen; font-family: cursive; ">
                                    <%= data.Title %>
                                </h1>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 ">
                                <label for="">
                                    <%= data.Description %>
                                </label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 col-md-6 text-center">
                                <label for="">
                                    <b>
                                        <h3> &#x20B9; <%= data.SalePrice %>/-
                                        </h3>
                                    </b>
                                </label>
                                <br>
                                <label for="">
                                    <div><span class="stars-container stars-100"
                                            style="font-size: xx-large;">★★★★★</span></div>
                                </label><br>
                            </div>
                            <div class="col-12 col-md-6 text-center">
                                <label for="">
                                    <b>
                                        <h5>Item in Pack : <%= data.ItemInPack %>
                                        </h5>
                                    </b>
                                </label>
                                <br>
                                <label for=""><b>Color <%= data.Color %></b><br>
                                    <span class="dot" style="border: 5px solid rgb(0, 0, 0);
                                    height: 25px; width: 25px;
                                    background-color : <%= data.Color %>;
                                    border-radius: 50%;
                                    display: inline-block;"></span>
                                </label>
                            </div>
                        </div>
                        <form method="post" action="/Cart/Add/<%= data.Pid %>">
                            <input type="text" value=" <%= data.Title %>" name="Pname" hidden="true">
                            <div class="row ">
                                <div class="col-12 ">
                                    <div class="counter">
                                        <b>Qty:</b> <span class="down" onClick='decreaseCount(event, this)'>-</span>
                                        <input type="text" value="1" name="Qty">
                                        <span class="up" onClick='increaseCount(event, this)'>+</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-12 text-center ">
                                    <button type="submit" class="btn btn-outline-dark">Add To Cart</button>
                                </div>

                            </div>
                        </form>
                        <br><br>
                        <div class="row ">
                            <div class="col-12 ">
                                How To Use It:-
                                <label for="" style="font-size: small;">
                                    <%= data.HowToUse %>
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- product Image -->
                    <div class="col-12 col-md-1 order-md-first order-1">
                        <% for(var i=0; i < data.Images.length; i++) { %>
                            <div class="">
                                <img id="fromimg<%= i %>" src="/uploadproductimage/<%= data.Images[i] %>" class="d-block imgzoom" width="100%" alt="<%= data.Description %>" onclick="changImage('<%= i %>')">
                                <% j = i %>
                                    <br>
                            </div>
                            <% } %>
                    </div>
                    <!-- Side bar for image -->
                    <!-- Selected image display here -->
                    <div class="col-12 col-md-5 ">
                        <% if( j == i) { %>
                            <div class="imgzoom">
                                <img id="mainimg" src="/uploadproductimage/<%= data.Images[j] %>" class="d-block" width="100%" alt="<%= data.Description %>">
                                <br>
                            </div>
                            <% } else { %>
                                <div class="imgzoom">
                                    <img id="mainimg" src="/uploadproductimage/<%= data.Images[0] %>" class="d-block" width="100%" alt="<%= data.Description %>">
                                    <br>
                                </div>
                                <% } %>
                    </div>
                    <!-- End of selected image -->
                </div>
        </section>
        <!-- product end -->
    </main>
    <%- include("../partial/footer.ejs") %>