<%- include("../partial/header.ejs") %>
    <main>


        <!-- product start -->
        <section class="py-5">
            <div class="container-fluid">
                <div.<div class="row ${1| ,row-cols-2,row-cols-3, auto,justify-content-md-center,|}">
                    <!-- product details -->
                    <div class="col-12 col-md-6 change">
                        <div class="row ">
                            <div class="col  ">
                                <h1 class="text-center">
                                    <%= data.Title %>
                                </h1>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 col-md-6 text-center">
                                <label for=""><b> Price : </b><%= data.SalePrice %></label>
                            </div>
                            <div class="col-12 col-md-6 text-center">
                                <label for=""><b> Rating : </b> <%= data.Rating %></label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12  text-center ">
                                <label for=""><b> Product Description </b>: <%= data.Description %></label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12  text-center ">
                                <label for=""><b> Color : </b> <%= data.Color %></label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 col-md-6 text-center ">
                                <h1>Add to Cart</h1>
                            </div>
                            <div class="col-12 col-md-6 text-center ">
                                <h1>Buy Know</h1>
                            </div>
                        </div>
                    </div>
                    <!-- product Image -->
                    <div class="col-12 col-md-6 ">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <% for(var i=0; i < data.Images.length; i++) { %>
                                    <div class="carousel-item active">
                                        <img src="/uploadproductimage/<%= data.Images[i] %>" class="d-block w-100" alt="<%= data.Description %>">
                                    </div>
                                    <% } %>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
            </div>
        </section>
        <!-- product end -->

    </main>
    <%- include("../partial/footer.ejs") %>