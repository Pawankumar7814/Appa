<%- include("../partial/header.ejs") %>
    <main>
        <section>
            <div class="container-fluid ">
                <div id="mySidebar" class="sidebar">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                    <ul class="list-unstyled ps-0">
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
                                    Show
                                </button>
                            <div class="collapse show" id="home-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="/Admin/ShowAllUser" class="link-dark rounded">User</a></li>
                                    <li><a href="/Admin/ShowAllAdmin" class="link-dark rounded">Admin</a></li>
                                    <li><a href="/Admin/ShowAllMsg" class="link-dark rounded">Msg</a></li>
                                </ul>
                            </div>
                        </li>
                        <a href="#">Services</a>
                        <a href="#">Clients</a>
                        <a href="#">Contact</a>
                </div>

                <div class="row">
                    <form action="/Admin/Product/Add" method="post">
                        <button class="openbtn" onclick="openNav()">☰ Open Sidebar</button>
                        <script>
                            function openNav() {
                                document.getElementById("mySidebar").style.width = "250px";
                                document.getElementById("main").style.marginLeft = "250px";
                            }

                            function closeNav() {
                                document.getElementById("mySidebar").style.width = "0";
                                document.getElementById("main").style.marginLeft = "0";
                            }
                        </script>

                        <div class="row">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <label for="pname" class="col-sm-4 col-form-label"><b>Product Name : </b></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="pname" name="pname" placeholder="Lotus Wick" required>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="pdescription" class="col-sm-4 col-form-label"><b>Product Discrption : </b></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="pdescription" name="pdescription" placeholder="About" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <label for="pprice" class="col-sm-4 col-form-label"><b>Product Price : </b></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="pprice" name="pprice" placeholder="Rs. 100" required>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="pquantity" class="col-sm-4 col-form-label"><b>Quantity :</b></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="pquantity" name="pquantity" placeholder="10" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <label for="pcolor" class="col-sm-4 col-form-label"><b>Product Color :</b></label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="pcolor" name="pcolor" placeholder="red" required>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label for="pimg" class="col-sm-4 col-form-label"><b>Product Image :</b></label>
                                    <div class="col-sm-8">
                                        <input type="file" class="form-control" id="pimg" name="pimg" placeholder="upload your image" value="upload your image" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col text-center">
                            <!-- <input type="submit" class="btn-sm" value="Send"> -->
                            <button type="submit" class="btn-sm ">Add Product</button>
                            <br>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <%- include("../partial/footer.ejs") %>