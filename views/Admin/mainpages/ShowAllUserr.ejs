<%- include("../partial/header.ejs") %>

    <main>
        <section>
            <div class="container">
                <div class="adminpageheading">
                    <h1>
                        View All User
                    </h1>
                    <hr>
                </div>
                <% data.forEach(data => { %>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="card">
                                <div class="container-fluid">
                                    <form action="">
                                        <div>
                                            <label for="">Name: <%- data.UFname %> <%- data.ULname %></label>
                                        </div>
                                        <div>
                                            <label for="">Email: <%- data.UEmail %></label>
                                        </div>
                                        <div>
                                            <label for="">Phone: <%- data.UPhone %></label>
                                        </div>
                                        <div>
                                            <label for="">Status: <%- data.Ustatus %></label>
                                        </div>
                                    </form>
                                    <br>
                                    <div class="col-md-6">
                                        <a class="btn-sm" href="/Admin/UserStatus/<%- data.UID %>"> Change Status</a>
                                    </div>
                                    <br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>
    </main>

    <%- include("../partial/footer.ejs") %>