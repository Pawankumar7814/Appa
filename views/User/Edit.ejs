<%- include("../partial/header.ejs") %>
    <main class="userprofile-body">
        <section>

            <div class="container card user-profile">
                <form class="row g-3" action="/user/Edit" method="post">
                    <div class="container-fluid profileheading">
                        <h2>
                            <center>
                                <i>PROFILE</i>
                            </center>
                        </h2>
                    </div>
                    <div class="col-md-6">
                        <label for="Ufname" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="Ufname" name="Ufname" value="<%= data.UFname %>">
                    </div>
                    <div class="col-md-6">
                        <label for="ulname" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="ulname" name="ulname" value="<%= data.ULname %>">
                    </div>
                    <div class="col-md-6">
                        <label for="uemail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="uemail" name="uemail" value="<%= data.UEmail %>" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="uphone" class="form-label">Contact No</label>
                        <input type="text" class="form-control" id="uphone" name="uphone" value="<%= data.UPhone %>">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip">
                    </div>
                    <div class="container-fluid text-center">
                        <br>
                        <a href="/User/View"><button type="reset" class="btn-sm"
                                onclick="history.back()">Back</button></a>
                        <button type="submit" class="btn-sm">Update</button>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <%- include("../partial/footer.ejs") %>