<%- include("../partial/header.ejs") %>
    <main class="bg">
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="card carddesign">
                            <div class="card-body cardcont">
                                <div class="card-title">Forget Password</div>
                                <div class="card-text">
                                    <form action="/User/forgetpassword" method="post">
                                        <div class="row">
                                            <div class="row mb-3">
                                                <label for="inputemailid1" class="col-sm-4 col-form-label">E-Mail</label>
                                                <div class="col-sm-8">
                                                    <input type="email" name="emailid" id="inputemailid1" />
                                                </div>
                                            </div>
                                            <div class="row mb-3 text-center">
                                                <label for="">OR</label>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-sm-8">
                                                    <label for="inputphonenumber1" class="col-sm-4 col-form-label">Contact
                                                    No</label>
                                                    <input type="text" class="" name="phone" id="inputphonenumber1" />
                                                </div>
                                            </div>
                                            <div class="col text-center">
                                                <button type="submit" class="btn-sm">Send</button>
                                            </div>

                                            <h6 style="margin-top: 1%;" class="card-subtitle mb-2 text-muted">New User? &nbsp;<a href="/User/Register">Register now</a></h6>
                                            <h6 class="card-subtitle mb-2 text-muted"><a href="/User/forgetpassword">Forget Password?</a></h6>
                                        </div>
                                        <% if ( error && error.length> 0 ) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= error %>
                                            </div>
                                            <% } %>
                                                <% if ( success && success.length> 0 ) { %>
                                                    <div class="alert alert-info" role="alert">
                                                        <%= success %>
                                                    </div>
                                                    <% } %>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("../partial/footer.ejs") %>