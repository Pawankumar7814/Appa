<%- include("../partial/header.ejs") %>
    <main>
        <section>
            <div class="container-fluid col">
                <div class="bg">
                    <div class="row row-md-5">
                        <div class="cardadjust">
                            <div class="card carddesign" style="width: 31%;">
                                <div class="card-body cardcont">
                                    <h5 class="card-title">Log In</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">New User? &nbsp;<a href="/User/Register">Register now</a></h6>
                                    <p class="card-text">
                                        <form method="post">
                                            <div>
                                                <label for="emailid">Email ID:</label>
                                                <input type="email" class="form-control col" id="uemail" placeholder="@gmail.com" required>
                                            </div>
                                            <div>
                                                <label for="pass">Password:</label>
                                                <input type="password" class="form-control col" id="upass" placeholder="At least 6 characters" required>
                                            </div>
                                            <br>
                                            <div>
                                                <button type="submit" class="buttondisp">Sign in</button>
                                            </div>
                                        </form>
                                    </p>
                                    <a href="#" class="card-link">Forget Password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("../partial/footer.ejs") %>